= form_for @article do |f|
  -if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :body
    = f.text_field :body
  .field
    = f.label :tags
    = f.text_field :tags
  .actions
    = f.submit 'Post!'
    or
    = link_to "get me out of here", root_path
